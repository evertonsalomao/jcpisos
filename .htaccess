RewriteEngine On

# Sitemap XML
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Redireciona URLs de cidades para cidade.php
RewriteRule ^bloquete-em-([a-z0-9-]+)/?$ cidade.php?slug=$1 [L,QSA]

# Redireciona URLs de pisos intertravados para piso-cidade.php
RewriteRule ^piso-intertravado-em-([a-z0-9-]+)/?$ piso-cidade.php?slug=$1 [L,QSA]

# Redireciona URLs de produtos para produto-dinamico.php
RewriteRule ^produto/([a-z0-9-]+)/?$ produto-dinamico.php?slug=$1 [L,QSA]

# Redireciona /uploads/ para /qube-manager/uploads/ de forma transparente
RewriteRule ^uploads/(.*)$ qube-manager/uploads/$1 [L]

# Bloqueia acesso direto Ã  pasta qube-manager (exceto uploads via rewrite acima)
RewriteCond %{REQUEST_URI} ^/qube-manager/
RewriteCond %{REQUEST_URI} !^/qube-manager/uploads/
RewriteRule ^.*$ - [F,L]
